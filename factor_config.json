    },
    "POLICY_ANNOUNCEMENT": {
      "examples": ["Fiscal Policy", "Regulation", "Government Policy"],
      "default_importance": 0.5
    }
  },
  "actors": {
    "central_banks": ["Fed", "ECB", "BOJ", "BOE", "PBoC", "RBI"],
    "governments": ["US Treasury", "China", "Russia", "India"],
    "organizations": ["IMF", "World Bank", "WGC", "OPEC"],
